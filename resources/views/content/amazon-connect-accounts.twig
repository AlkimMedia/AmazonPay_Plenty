{% extends getPartial('page-design') %}
{% block PageBody %}
    <div class="container-max">
        <h1>{{ trans("AmazonLoginAndPay::AmazonPay.accountConnectCaption") }}</h1>
        <div class="alert alert-danger">
            {{ trans("AmazonLoginAndPay::AmazonPay.accountConnectIntro") }}
        </div>

        <h2>{{ trans("AmazonLoginAndPay::AmazonPay.accountConnectProceedAsGuestCaption") }}</h2>
        <a href="/amazon-checkout"
           class="btn btn-primary">{{ trans("AmazonLoginAndPay::AmazonPay.accountConnectProceedAsGuestButtonCaption") }}</a>

        <h2>{{ trans("AmazonLoginAndPay::AmazonPay.accountConnectCredentialsCaption") }}</h2>
        <form class="amazon-login-container m-b-1" action="amazon-connect-accounts" method="POST">
            <div class="row">
                <div class="col-xs-12">
                    <div class="input-unit" data-validate="mail">
                        <input type="email" value="{{ email }}" disabled>
                        <input type="hidden" name="email" value="{{ email }}">
                        <label for="txt_email">{{ trans("Ceres::Template.accEmail") }}</label>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="input-unit" data-validate="text">
                        <input type="password" name="password" id="txt_password">
                        <label for="txt_password">{{ trans("Ceres::Template.accPassword") }}*</label>
                    </div>
                </div>
                <div class="col-xs-12">
                    <button class="btn btn-primary send-login-btn">
                        <i class="fa fa-sign-in" aria-hidden="true"></i> {{ trans("Ceres::Template.accLogin") }}
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}